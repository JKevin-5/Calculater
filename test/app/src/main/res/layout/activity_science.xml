<?xml version="1.0" encoding="utf-8"?>
<GridLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:rowCount="8"
    android:columnCount="5"
    android:focusable="true"
    android:focusableInTouchMode="true"
    >
    <!--
    网格标签下
    rowCount 网格的最大行数
    columnCount 网格的最大列数
    子元素属性
    layout_column 当前所在列
    layout_columnSpan 所占列数
    layout_columnWeight 列权重
    -->
    <LinearLayout
        android:layout_columnSpan="5"
        android:layout_columnWeight="5"
        android:layout_height="555px"
        android:background="#e9e9e9"
        >
        <EditText
            android:id="@+id/history"
            android:layout_width="match_parent"
            android:layout_height="550px"
            android:gravity="right|bottom"
            android:cursorVisible="false"
            android:textSize="35sp"
            android:textColor="#636262"
            android:background="@null"
            android:scrollbars="vertical"
            android:maxLines="20"
            android:singleLine="false"

            />
    </LinearLayout>
    <LinearLayout
        android:layout_columnSpan="5"
        android:layout_columnWeight="5"
        android:layout_height="310px"
        android:background="#e9e9e9"
        >
        <EditText
            android:id="@+id/edit"
            android:layout_width="match_parent"
            android:layout_height="305px"
            android:gravity="right|bottom"
            android:cursorVisible="false"
            android:textSize="45sp"
            android:background="@null"
            android:scrollbars="vertical"
            android:maxLines="20"
            android:singleLine="false"
            />
    </LinearLayout>
    <Button
        android:id="@+id/leftbracket"
        android:layout_width="216px"
        android:layout_height="172px"
        android:text=" (  "
        android:background="@drawable/clicked"
        android:textSize="30sp"

        />
    <Button
        android:id="@+id/multiplication"
        android:layout_width="216px"
        android:layout_height="172px"
        android:text=" x "
        android:textSize="30sp"
        android:background="@drawable/clicked"
        />
    <Button
        android:id="@+id/division"
        android:layout_width="216px"
        android:layout_height="172px"
        android:text=" ÷  "
        android:background="@drawable/clicked"
        android:textSize="30sp"
        />
    <Button
        android:id="@+id/subtraction"
        android:layout_width="216px"
        android:layout_height="172px"
        android:text="—"
        android:background="@drawable/clicked"
        android:textSize="30sp"
        />
    <Button
        android:id="@+id/plus"
        android:layout_width="216px"
        android:layout_height="172px"
        android:text=" + "
        android:background="@drawable/clicked"
        android:textSize="30sp"
        />
    <Button
        android:id="@+id/rightbracket"
        android:layout_width="216px"
        android:layout_height="172px"
        android:text=" ) "
        android:background="@drawable/clicked"
        android:textSize="30sp"
        />
    <Button
        android:id="@+id/seven"
        android:layout_width="216px"
        android:layout_height="172px"
        android:text="7"
        android:textSize="30sp"
        android:background="@drawable/clicked"
        />
    <Button
        android:id="@+id/eight"
        android:layout_width="216px"
        android:layout_height="172px"
        android:text="8"
        android:textSize="30sp"
        android:background="@drawable/clicked"
        />
    <Button
        android:id="@+id/nine"
        android:layout_width="216px"
        android:layout_height="172px"
        android:text="9"
        android:textSize="30sp"
        android:background="@drawable/clicked"
        />
    <Button
        android:id="@+id/delect"
        android:layout_width="216px"
        android:layout_height="172px"
        android:textSize="30sp"
        android:text=" DEL "
        android:background="@drawable/clicked"
        />
    <Button
        android:id="@+id/denominator"
        android:layout_width="216px"
        android:layout_height="172px"
        android:text=" 1/x "
        android:background="@drawable/clicked"
        android:textSize="30sp"
        />
    <Button
        android:id="@+id/four"
        android:layout_width="216px"
        android:layout_height="172px"
        android:text="4"
        android:background="@drawable/clicked"
        android:textSize="30sp"
        />
    <Button
        android:id="@+id/five"
        android:layout_width="216px"
        android:layout_height="172px"
        android:text="5"
        android:background="@drawable/clicked"
        android:textSize="30sp"
        />
    <Button
        android:id="@+id/six"
        android:layout_width="216px"
        android:layout_height="172px"
        android:text="6"
        android:background="@drawable/clicked"
        android:textSize="30sp"
        />
    <Button
        android:id="@+id/allclear"
        android:layout_width="216px"
        android:layout_height="172px"
        android:text="AC"
        android:background="@drawable/clicked"
        android:textColor="#FF6600"
        android:textSize="30sp"
        />
    <Button
        android:id="@+id/square"
        android:layout_width="216px"
        android:layout_height="172px"
        android:text="√x"
        android:background="@drawable/clicked"
        android:textSize="30sp"
        />
    <Button
        android:id="@+id/one"
        android:layout_width="216px"
        android:layout_height="172px"
        android:text="1"
        android:background="@drawable/clicked"
        android:textSize="30sp"
        />
    <Button
        android:id="@+id/two"
        android:layout_width="216px"
        android:layout_height="172px"
        android:text="2"
        android:background="@drawable/clicked"
        android:textSize="30sp"
        />
    <Button
        android:id="@+id/three"
        android:layout_width="216px"
        android:layout_height="172px"
        android:text="3"
        android:background="@drawable/clicked"
        android:textSize="30sp"
        />
    <Button
        android:id="@+id/equal"
        android:layout_width="216px"
        android:layout_height="344px"
        android:layout_rowSpan="2"
        android:text=" = "
        android:textColor="#FFFFFF"
        android:background="@drawable/shape_button1"
        android:textSize="30sp"
        android:layout_gravity="fill_vertical"
        />
    <Button
        android:id="@+id/pow"
        android:layout_width="216px"
        android:layout_height="172px"
        android:text="x^y"
        android:background="@drawable/clicked"
        android:textSize="30sp"
        />
    <Button
        android:id="@+id/PI"
        android:layout_width="216px"
        android:layout_height="172px"
        android:text="π"
        android:background="@drawable/clicked"
        android:textSize="30sp"
        />
    <Button
        android:id="@+id/earo"
        android:layout_width="216px"
        android:layout_height="172px"
        android:text="0"
        android:background="@drawable/clicked"
        android:textSize="30sp"
        />
    <Button
        android:id="@+id/point"
        android:layout_width="216px"
        android:layout_height="172px"
        android:text="."
        android:background="@drawable/clicked"
        android:textSize="30sp"
        />

    <Space />
</GridLayout>
